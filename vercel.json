
{
  "version": 2,
  "headers": [
    {
      "source": "/(.*).tsx",
      "headers": [
        { "key": "Content-Type", "value": "text/javascript; charset=utf-8" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/(.*).ts",
      "headers": [
        { "key": "Content-Type", "value": "text/javascript; charset=utf-8" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!.*\\.(tsx|ts|js|json|png|jpg|svg|css|ico)).*)",
      "destination": "/index.html"
    }
  ]
}
